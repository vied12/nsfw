{
    "name": "nsfw",
    "scripts": {
        "postdeploy": "scripts/post_deploy_pr.sh"
    },
    "env": {
        "COMPRESS_ENABLED": {
            "required": true
        },
        "COMPRESS_OFFLINE": {
            "required": true
        },
        "DEBUG": {
            "required": true
        },
        "DISABLE_COLLECTSTATIC": {
            "required": true
        },
        "FB_VERIFY_TOKEN": {
            "required": true
        },
        "FB_PAGE_TOKEN": {
            "required": true
        },
        "DJANGO_SETTINGS_MODULE": {
            "value": "app.settings_heroku",
            "required": true
        },
        "WIT_TOKEN": {
            "required": true
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "addons": [
        "memcachier",
        "newrelic",
        "heroku-postgresql",
        "scheduler",
        "sendgrid"
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-python"
        }
    ]
}
